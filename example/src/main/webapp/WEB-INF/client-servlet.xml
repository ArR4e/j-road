<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd	   
	   					   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:annotation-config />

	<!-- Spring MVC configuration for demo app, not needed for X-tee -->
	<bean id="attachmentEchoTestController"
		class="ee.webmedia.xtee.example.client.AttachmentEchoTestController">
		<property name="formView" value="test" />
	</bean>

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/WEB-INF/views/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<bean id="urlMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<value>**=attachmentEchoTestController</value>
		</property>
	</bean>

	<!-- X-tee configuration -->

	<bean id="webServiceTemplate" class="org.springframework.ws.client.core.WebServiceTemplate" />

	<bean id="xTeeConsumer" class="ee.webmedia.xtee.client.service.consumer.StandardXTeeConsumer">
		<property name="webServiceTemplate" ref="webServiceTemplate" />
	</bean>

	<bean id="xTeeServiceConfigurationProvider"
		class="ee.webmedia.xtee.client.service.configuration.provider.PropertiesBasedXTeeServiceConfigurationProvider">
		<property name="resource" value="/WEB-INF/xtee.properties" />
	</bean>

	<bean id="naidisXTeeService"
		class="ee.webmedia.xtee.example.client.NaidisXTeeServiceImpl">
		<property name="database" value="naidis" />
		<property name="xTeeServiceConfigurationProvider" ref="xTeeServiceConfigurationProvider" />
		<property name="xTeeConsumer" ref="xTeeConsumer" />
	</bean>


</beans>