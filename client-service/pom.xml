<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>xtee-client-service</artifactId>
  <name>X-Tee Client parent</name>
  <packaging>pom</packaging>

  <parent>
    <groupId>ee.webmedia.xtee</groupId>
    <artifactId>xtee-root</artifactId>
    <version>2.1.1.45</version>
  </parent>

  <dependencies>
    <dependency>
      <groupId>ee.webmedia.xtee</groupId>
      <artifactId>xtee-client-transport</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>ee.webmedia.xtee</groupId>
      <artifactId>xtee-typegen</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>ee.webmedia.xtee</groupId>
      <artifactId>xtee-client-test</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <modules>
    <module>aar</module>
    <module>ads</module>
    <module>arireg</module>
    <module>dhl</module>
    <module>ehis</module>
    <module>ehr</module>
    <module>emta</module>
    <module>epria</module>
    <module>esis</module>
    <module>karis</module>
    <module>kirst</module>
    <module>kmais</module>
    <module>koodikeskus</module>
    <module>kr</module>
    <module>liiklusregister</module>
    <module>ljvis</module>
    <module>lkf</module>
    <module>mteenus</module>
    <module>pkr</module>
    <module>polis</module>
    <module>rets</module>
    <module>rmrk</module>
    <module>rr</module>
    <module>teavituskalender</module>
    <module>test</module>
    <module>trelvaregister</module>
    <module>vangis</module>
    <module>viisaregister</module>
  </modules>

  <build>
    <plugins>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.1.1</version>
        <executions>
        <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>java</goal>
            </goals>
            <inherited>true</inherited>
            <configuration>
              <mainClass>ee.webmedia.xtee.typegen.TypeGen</mainClass>
              <arguments>
                <argument>wsdldir=${basedir}/src/main/resources</argument>
                <argument>sourcedir=${basedir}/src/main/java</argument>
                <argument>xsbdir=${basedir}/target/classes</argument>
                <argument>basepackage=ee.webmedia.xtee.client.${package}.types</argument>
                <argument>dbclassespackage=ee.webmedia.xtee.client.${package}.database</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <inherited>true</inherited>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-clean-plugin</artifactId>
        <version>2.3</version>
        <configuration>
          <filesets>
            <fileset>
              <directory>src/main/java/ee/webmedia/xtee/client/${package}/types</directory>
            </fileset>
            <fileset>
              <directory>src/main/java/ee/webmedia/xtee/client/${package}/database</directory>
            </fileset>
          </filesets>
        </configuration>
      </plugin>

      <plugin>
    	<inherited>true</inherited>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <encoding>UTF-8</encoding>
          <source>1.5</source>
          <target>1.5</target>
          <fork>true</fork>
          <maxmem>512m</maxmem>
        </configuration>
      </plugin>

      <plugin>
        <inherited>true</inherited>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <configuration>
              <excludes>
                <exclude>*.wsdl</exclude>
              </excludes>
            </configuration>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <inherited>true</inherited>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <configuration>
              <excludeResources>true</excludeResources>
            </configuration>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
